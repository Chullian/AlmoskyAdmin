<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button.Primary" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/x_sm_text_size</item>

    </style>


    <style name="TextLabel.Primary" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="colorControlActivated">@color/colorDivider</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@color/colorDivider</item>

    </style>

    <style name="TextLabel.Primary.Error" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/colorRed</item>

    </style>



    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Tag" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/ic_pill</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:paddingStart">11.0dip</item>
        <item name="android:paddingEnd">11.0dip</item>
        <item name="android:layout_marginStart">2.0dip</item>
        <item name="android:layout_marginEnd">2.0dip</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />



</resources>
